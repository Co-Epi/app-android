<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/Text</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textDefault</item>
    </style>

    <style name="Text.Headline">
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>

    <style name="Text.Title">
      <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="Text.Alert">
        <item name="android:textSize">@dimen/text_size_30</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DarkFragment">
        <item name="android:background">@drawable/ic_geometric_dark_background</item>
    </style>

    <style name="LightFragment">
        <item name="android:background">@drawable/ic_geometric_light_background</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:height">36dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">@style/Text</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StandardButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shadowed_button</item>
        <item name="android:textAppearance">@style/Text</item>
        <item name="android:textColor">@color/item_symptom_text</item>
        <item name="android:textSize">@dimen/text_size_30</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">50dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="card_view_title">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#DE000000</item>
    </style>
    <style name="card_view_body">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#DE000000</item>
    </style>
    <style name="card_view_link">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
</resources>
