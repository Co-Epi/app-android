<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="org.coepi.android.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home"
        >
        <action
            android:id="@+id/action_home_fragment_to_care_fragment"
            app:destination="@id/care_fragment" />
    </fragment>

    <fragment
        android:id="@+id/care_fragment"
        android:name="org.coepi.android.ui.symptoms.SymptomsFragment"
        android:label="@string/label_fragment_care"
        tools:layout="@layout/fragment_symptoms" />

    <fragment
        android:id="@+id/ble_fragment"
        android:name="org.coepi.android.ui.cen.CENFragment"
        android:label="@string/label_fragment_care"
        tools:layout="@layout/fragment_ble" />

    <fragment
        android:id="@+id/location_fragment"
        android:name="org.coepi.android.ui.location.LocationFragment"
        android:label="@string/label_fragment_location"
        tools:layout="@layout/fragment_location" />

    <fragment
        android:id="@+id/settings_fragment"
        android:name="org.coepi.android.ui.settings.SettingsFragment"
        android:label="@string/label_fragment_settings"
        tools:layout="@layout/fragment_settings" />

</navigation>
